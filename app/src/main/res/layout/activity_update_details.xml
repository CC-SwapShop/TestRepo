<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/g"
    android:orientation="vertical"
    tools:context=".update_details_activity">

    <EditText
        android:id="@+id/edit_newname"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnchguname"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="9dp"
        android:text="change username" />

    <EditText
        android:id="@+id/edtsndemail"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/btnsendemail"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="18dp"
        android:text="send password reset email" />

    <ImageView
        android:id="@+id/imgpicture"
        android:layout_width="382dp"
        android:layout_height="109dp"
        app:srcCompat="@drawable/profile" />

    <Button
        android:id="@+id/btnuploaddp"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="18dp"
        android:text="Change display picture" />

</LinearLayout>