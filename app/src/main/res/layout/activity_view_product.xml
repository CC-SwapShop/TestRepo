<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/g"
    tools:context=".ViewProduct">

    <Button
        android:id="@+id/btnVP_Swap"
        android:layout_width="115dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#808080"
        android:text="Swap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textStatus" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="99dp"
        android:layout_height="69dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dd" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="298dp"
        android:layout_height="95dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="SWAPSHOP"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgVP_Prod"
        android:layout_width="156dp"
        android:layout_height="142dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVP_UID"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtVP_Desc"
        android:layout_width="165dp"
        android:layout_height="41dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Description"
        app:layout_constraintStart_toEndOf="@+id/imgVP_Prod"
        app:layout_constraintTop_toBottomOf="@+id/txtVP_Name" />

    <TextView
        android:id="@+id/txtVP_Name"
        android:layout_width="165dp"
        android:layout_height="41dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="102dp"
        android:text="Name of product"
        app:layout_constraintStart_toEndOf="@+id/imgVP_Prod"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/txtVP_Loc"
        android:layout_width="165dp"
        android:layout_height="41dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Location"
        app:layout_constraintStart_toEndOf="@+id/imgVP_Prod"
        app:layout_constraintTop_toBottomOf="@+id/txtVP_Desc" />

    <TextView
        android:id="@+id/txtVP_UID"
        android:layout_width="163dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="User id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/txtVP_ItemSwap"
        android:layout_width="165dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:text="What user wants"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgVP_Prod" />

    <Button
        android:id="@+id/btnVP_AddWishlist"
        android:layout_width="121dp"
        android:layout_height="53dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="174dp"
        android:backgroundTint="#808080"
        android:text="Add Watchlist"
        app:layout_constraintStart_toEndOf="@+id/btnVP_Swap"
        app:layout_constraintTop_toBottomOf="@+id/txtVP_Loc" />

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="164dp"
        android:layout_height="41dp"
        android:layout_marginStart="17dp"
        android:text="Status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVP_ItemSwap" />

</androidx.constraintlayout.widget.ConstraintLayout>