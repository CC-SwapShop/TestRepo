<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/upload_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E387A"
    tools:context=".UploadProduct">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgSwap"
                android:layout_width="232dp"
                android:layout_height="162dp"
                android:layout_marginStart="88dp"
                android:layout_marginTop="84dp"
                android:layout_marginBottom="68dp"
                android:background="#100F0F"
                app:srcCompat="@drawable/image_to_upload"
                tools:srcCompat="@tools:sample/avatars" />

            <EditText
                android:id="@+id/edtAName"
                android:layout_width="392dp"
                android:layout_height="62dp"
                android:ems="10"
                android:fontFamily="serif"
                android:hint="Product Name"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/edtADescription"
                android:layout_width="392dp"
                android:layout_height="60dp"
                android:ems="10"
                android:fontFamily="serif"
                android:gravity="start|top"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/edtALocation"
                android:layout_width="392dp"
                android:layout_height="59dp"
                android:ems="10"
                android:fontFamily="serif"
                android:hint="Location"
                android:inputType="textPostalAddress"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/edtALreqProduct"
                android:layout_width="392dp"
                android:layout_height="61dp"
                android:ems="10"
                android:fontFamily="serif"
                android:hint="Product or amount user wants"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="399dp"
                android:layout_height="57dp"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnAUpload"
                android:textColor="#FFFFFF"
                android:layout_width="456dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dip"
                android:layout_marginTop="0dp"
                android:backgroundTint="#808080"
                android:fontFamily="serif"
                android:text="Upload" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>