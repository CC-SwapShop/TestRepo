<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E387A"
    tools:context=".LoginFrag">

    <EditText
        android:id="@+id/edtLEmail"
        android:layout_width="404dp"
        android:layout_height="65dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtLPassword"
        android:layout_width="419dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtLEmail" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="410dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#808080"
        android:fontFamily="serif"
        android:text="Log in"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtLPassword" />

    <Button
        android:id="@+id/btnLRegister"
        android:layout_width="410dp"
        android:layout_height="61dp"
        android:layout_marginTop="92dp"
        android:backgroundTint="#808080"
        android:fontFamily="serif"
        android:text="Register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtLPassword" />

    <TextView
        android:id="@+id/TV_login"
        android:layout_width="238dp"
        android:layout_height="63dp"
        android:text="Login Page"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.635"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

</androidx.constraintlayout.widget.ConstraintLayout>